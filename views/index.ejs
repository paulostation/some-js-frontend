<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <link rel='stylesheet' href='/stylesheets/dropzone.css' />
    <script
  src="https://code.jquery.com/jquery-3.2.1.min.js"
  integrity="sha256-hwg4gsxgFZhOsEEamdOYGBf13FyQuiTwlAQgxVSNgt4="
  crossorigin="anonymous"></script>
  <!--<script type="text/javascript" src="/js/index.js"></script>-->
  <script type="text/javascript" >

   function analyzeStuff() {
    
    let success = result => {
        let scoreArray = result.split(" ");
        $(".loader").hide();
        $('#result').html(scoreArray);
    };

    let error = error => {
        console.error("Error while analyzing images: ", error);
    };

    let ajaxSettings = {
        type: "GET",
        url: '/test',
        success: success,
        error: error,
        statusCode: {
            404: function() {
                reject("page not found");
            }
        }
    };

    $(".loader").show();

    $.ajax(ajaxSettings);
}
  </script>
  </head>
  <body>
    <h1><%= title %></h1>    
      <form action="/file-upload" class="dropzone">
  <div class="fallback">
    <input name="file" type="file" multiple />
  </div>
</form>
<form action="/file-upload2" class="dropzone">
  <div class="fallback">
    <input name="file" type="file" multiple />
  </div>
</form>
  <button onclick="analyzeStuff()">Analyze</button>
  <div class="loader"><img src="/images/gifs/spinner.gif"></div>
  <div class="container">
  <div class="row">

    
<%for (var score in scoreArray){%>
  <div class="md-col-1"><%=score[scoreArray]%></div>    
  <%}%>

</div>
  </div>
    <script src="/js/dropzone.js"></script>
	

  </body>
</html>
