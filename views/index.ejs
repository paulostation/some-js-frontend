  <script type="text/javascript" >

   function analyzeStuff() {
    
    let success = result => {
      console.log(result);
        let scoreArray = result.split(" ");

        $(".loader").hide();
        let html = "";
        scoreArray.forEach(score => {
          (score > 0) ? 
          html+= `<div class="col-md-1 green">${score}</div>` : html+= `<div class="col-md-1 red">${score}</div>`;
        })

        $('#result').html(html);
        
    };

    let error = error => {
        console.error("Error while analyzing images: ", error);
    };

    let ajaxSettings = {
        type: "GET",
        url: '/test',
        success: success,
        error: error,
        statusCode: {
            404: function() {
                reject("page not found");
            }
        }
    };

    $(".loader").show();

    $.ajax(ajaxSettings);
}
  </script>
  </head>
  <body>
    <h1><%= title %></h1>    
      <form action="/file-upload" class="dropzone">
  <div class="fallback">
    <input name="file" type="file" multiple />
  </div>
</form>
